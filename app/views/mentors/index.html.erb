<p id="notice"><%= notice %></p>

<h1>Listing Mentors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.name %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="tag_cloud">
  <br/><br/>
  <h2> Tag Cloud </h2>
  <% tag_cloud Mentor.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>

<h2> Search for Mentors</h2>

  <%= form_tag("/mentors", method: "get") do %>
    <%= label_tag(:taq_query_match_identical, "Search for these tags (Comma Separated):") %>
    <%= text_field_tag(:tag_query_match_identical)%>
    <%= submit_tag("Search for any Mentors having just these tags") %>
  <% end %>
<br>
  <%= form_tag("/mentors", method: "get") do %>
    <%= label_tag(:taq_query_match_any, "Search for these tags (Comma Separated):") %>
    <%= text_field_tag(:tag_query_match_any) %>
    <%= submit_tag("Search for Mentors with any of these tags") %>
  <% end %>


<br>

